<section class='mainContainer container position-relative'>
    <div class='container position-relative' id="imgContainer">
        <img id="mainImg" src="<%= chapterPath+'/'+files[currentPage-1] %> " alt="Pagina uno" class='img-fluid d-block mx-auto position-relative darkmode-ignore'>
    </div>
    <div class="options-container d-flex bg-dark text-light position-relative">

        <% if (!user) { %>
            <button id="prevBtn"><a id="prevLink" href="#mainImg" class="nav-link disabled" onclick="goToAnchor('mainImg')">Anterior</a></button>
            <button id="nextBtn"><a id="nextLink" href="#mainImg" class="nav-link disabled" onclick="goToAnchor('mainImg')">Siguiente</a></button>
        <% } %>

        <% if (user) { %>
            <button id="prevBtn"><a href="#mainImg" class="nav-link <% if (settings.jumpOnPageTurn !== "imgTop") { %> disabled <% } %>" onclick="goToAnchor('mainImg')">Anterior</a></button>
            <button id="nextBtn"><a href="#mainImg" class="nav-link <% if (settings.jumpOnPageTurn !== "imgTop") { %> disabled <% } %>" onclick="goToAnchor('mainImg')">Siguiente</a></button>
        <% } %>

        <div id="goToForm">
            <label for="goToInput">Saltar a pagina: </label>
            <input type="number" name="goToInput" id="goToInput" class="w-25" min="1" max=<%= amountPages %>>
            <button id="goToBtn" class=""><a id="goToLink" href="#mainImg" class="nav-link disabled" onclick="goToAnchor('mainImg')">Ir</a></button>
        </div>

        <a class='nav-link' href=<%= `/read/${comic.id}` %>> Perfil del comic </a>
        <% if (!user) { %>
            <button id="openOptions">opciones</button>
        <% } %>
    </div>
</section>

<section class="'commentsContainer container my-2" id="comments">
    <% if (user) { %>
        <form class="commentPost" action=<%= Url %> method="post">
            <label for="commentText">Escribe un commentario!</label>
            <br>
            <textarea class="commentText" name="commentText" id="commentText" cols="50" rows="3"></textarea>
            <button type="submit">Comentar</button>
        </form>
    <% } else {%>
        <h5 class="text-center my-2 p-1 bg-dark text-light">Inicia sesion para escribir un commentario</h5>
    <% } %>

    <% if (comments.length > 0) { %>
        <button id="toggleComments" class="p-1 btn-primary">Comentarios</button>
        <div class="comment-container" id="comment-container" hidden>
            <% for( let i = 0; i < comments.length; i++ ) { %>
                <div class="my-2 p-2 bg-dark text-light w-50">
                    <h5><%= comments[i].username %> </h5>
                    <p><%= comments[i].commentText %> </p>
                    <div class="comment-options d-flex">
                        <% if (user && (comments[i].user_id === user[0].id || user.role === 1)) { %>
                            <form action=<%= `/comic/deleteComment/${comments[i].id}`%>  method="post">
                                <button class="p-1" type="submit">Eliminar comentario</button>
                            </form>
                        <% } %>
                    </div>
                </div>
            <% } %>
        </div>
    <% } %>
</section>

